{
  "name": "pith",
  "version": "0.1.0",
  "description": "A codebase wiki optimized for LLM consumption.",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "pith": "dist/cli/index.js"
  },
  "scripts": {
    "build": "tsc",
    "test": "node --experimental-strip-types --test 'src/**/*.test.ts'",
    "lint": "eslint src/",
    "format": "prettier --write src/",
    "prepublishOnly": "npm run build",
    "pr:review": "node --experimental-strip-types scripts/pr-review.ts"
  },
  "keywords": [
    "codebase",
    "wiki",
    "llm",
    "documentation",
    "typescript"
  ],
  "author": "",
  "license": "MIT",
  "engines": {
    "node": ">=22.6.0"
  },
  "dependencies": {
    "@jkershaw/mangodb": "^0.1.0",
    "commander": "^14.0.2",
    "dotenv": "^17.2.3",
    "express": "^5.2.1",
    "simple-git": "^3.30.0",
    "ts-morph": "^27.0.2",
    "undici": "^7.16.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@types/express": "^5.0.6",
    "@types/node": "^25.0.3",
    "eslint": "^9.39.2",
    "prettier": "^3.7.4",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.50.1"
  }
}
